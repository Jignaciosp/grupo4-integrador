<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<!-- utilizo el partial header asi se comporta de la misma manera en todas las paginas -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12"> 

			<form action="/user/login" method="get" class="formRegister">
				<div>
					<label for="email" >Email:</label>
					<input type="email" id="email" name="email" required>
				</div>
				<div>
					<label for="username" >Usuario:</label>
					<input type="text" id="username" name="username" required>
				</div>
				<div>
					<label for="password" >Contrase√±a:</label>
					<input type="password" id="password" name="password" required>
				</div>
				<div>
					<label for="fechaNacimiento" >Fecha de nacimiento:</label>
					<input type="date" id="fechaNacimiento" name="fechaNacimiento" >
				</div>
				<div>
					<label for="dni" >Nro de documento:</label>
					<input type="number" id="dni" name="dni" >
				</div>
				<div>
					<label for="fotoPerfil" >Foto de perfil (URL):</label>
					<input type="text" id="fotoPerfil" name="fotoPerfil" >
				</div>
			
				<button type="submit">Registrarme</button>
			</form> 
		</div class="col-12"> 

	<!-- footer -->
	<!-- utilizo el partial footer asi se comporta de la misma manera en todas las paginas -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>